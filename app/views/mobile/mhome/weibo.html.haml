- if @users
	#user_list_wrap
		#user_list.clearfix
			- @users.each do |u|
				%a{:click => "get_provider(#{u.id});return false;"}(href="#")
					.user_item
						.avatar
							= image_tag(u.avatar(:large))
						.name
							= u.user_name
- @leafs.each do |leaf|
	.leaf
		.info.clearfix
			%span.avatar.left
				= my_image_tag(leaf.provider.avatar,leaf.provider.weibo)
			%span.name.left
				%a{:click => "get_provider(#{leaf.provider.id});return false;"}(href="#")
					= leaf.provider.user_name
			%span.time.right
				= time_stamp(leaf.time_stamp)
		.content(ontouchend="touchStart($(this));")
			= auto_link(leaf.content)
		- if leaf.image
			.img
				= image_tag(leaf.image(:medium))
		- if !leaf.video.blank?
			%video{:src => "#{leaf.video}"}(preload="auto" controls height=250 width=300 webkit-playsinline)