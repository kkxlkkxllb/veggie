#user_info
	.avatar
		= image_tag(@user.avatar)
	.info
		.name
			= @user.name
		.providers
			- @user.providers.each do |p|
				= link_to image_tag("icon/#{p.provider}_big.png"),p.link,:target => "blank"
#user_show
	- @p_words.each do |w|
		.word_item
			.pic
				= image_tag(w[:image],:title => w[:title])
