- @words.each do |w|
	.word_item{:class => w.ctags, :wid => w.id}
		.wd
			- if current_member
				%a.fetch(href="javascript:void(0)"){:class => ("cancel" if current_member.has_u_word(w))}
					%i.icon-star-empty(title="收录")
			- if @can_add_tag
				%a.itag(href="javascript:void(0)")
					%i.icon-plus
			%a.audio(href="javascript:void(0)")
				%i.icon-headphones(title="发音")
				%audio{:src => w.source_voice}
			%span.title
				= w.title		
			%span.content
				= w.content
			%span.ctags
				= w.hash_tags
		.pic.hide
			= image_tag(w.image,:title => w.title)
			- if @can_add_tag
				%span.change_btn
					%i.icon-refresh
