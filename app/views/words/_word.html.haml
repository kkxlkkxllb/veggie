.word_item{:class => w.ctags, :wid => w.id}
	.wd
		- if current_member and !current_member.has_u_word(w)
			%a.fetch(href="#")
				%i.icon-share(title="收录" rel="tooltip")
		- if @can_add_tag
			%a.itag(href="#")
				%i.icon-plus
		%a.audio(href="#")
			%i.icon-headphones(title="发音" rel="tooltip")
			%audio{:src => w.source_voice}
		%span.title
			= w.title		
		%span.content
			= w.content
		%span.ctags
			= w.hash_tags
	.pic.hide
		= image_tag(w.image,:title => w.title)
		- if @can_add_tag
			%span.change_btn
				%i.icon-refresh