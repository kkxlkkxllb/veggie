#course_wrap
	- if @admin
		#new_word
			= form_tag '/words/create?admin=true',:remote => true do
				%input(type="search" name="word" id="word" placeholder="输入单词" required="required" autocomplete="off" disableautocomplete )
		= render 'modal/new_word_tag'
	.banner_wrap
		%h3.banner_title.dancer
			= @ctitle
	.words_container
		#word_nav
			%ul.clearfix	
				%li.active
					%a.button.glossy.xs.pink.skew(href="#all" ctag="*" data-icon=" ")
						All
				- @ctags.each do |t|
					%li
						%a.button.glossy.xs.green.skew{:ctag => "."+t}(href="#filter" data-icon=" ")
							= t.capitalize
			%span.btn-group
				%span.btn.active(rel="wd")
					%i.icon-th-large
				%span.btn(rel="pic")
					%i.icon-picture
		#word_ground
			- @words.each do |w|
				= render 'word',:w => w
