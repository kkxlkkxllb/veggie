#magic_images_modal.hide.modal.magic
	.modal-header
		%button.close(type="button" data-dismiss="modal")
			%span.icon-remove-circle
		%h3
			%i.icon-magic
			你可以使用关联身份取图
	.modal-body
		.errors.alert.alert-error
			TAT，你还没有关联对应的帐号呢！
			= link_to "立即关联",(setting_path + "#provider")
		.magic_items
			- %w{instagram tumblr}.each do |p|
				%a{data: p}(href = "#")
					= image_tag("icon/#{p}_big.png",:title => p)
		- %w{instagram tumblr}.each do |p|
			.images.hide{id: p}
		
