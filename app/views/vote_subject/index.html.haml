#wrap
	#new_word
		= form_tag "/word/insert",:remote => true do
			%p
				%input(type="text" name="word" id="word" placeholder="输入单词")
				= submit_tag "提交",:class => "btn btn-primary",:disable_with => "提交中"
	%table.table
		%tr
			%th
				单词
				= @words.count
			%th
				发音
			%th
				解释
		- @words.each do |w|
			= render 'word',:w => w
