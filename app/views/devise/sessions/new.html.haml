#login_contain.clearfix
	#login_form.pull-left
		.title
			学长登录
		= form_for(resource, :as => resource_name, :url => session_path(resource_name),:html => {:class => "form-horizontal"}) do |f|
			.control-group
				= f.label :email,"帐号",:class => "control-label"
				.controls
					= f.email_field :email,:placeholder => "Email"
			.control-group
				= f.label :password,"密码",:class => "control-label"
				.controls
					= f.password_field :password,:placeholder => "Password"

			- if devise_mapping.rememberable?
				.control-group
					.controls
						%label.checkbox
							= f.check_box :remember_me
							记住我
						= f.submit "登录",:class => "btn"
		- unless Member.any?
			= render :partial => "devise/shared/links"

	#register_form.pull-left
		.title
			学员登录／新生10秒注册入学
		.register
			= link_to image_tag("icon/twitter_big.png"),member_omniauth_authorize_path(:twitter)
			= link_to image_tag("icon/weibo_big.png"),member_omniauth_authorize_path(:weibo)
			= link_to image_tag("icon/github_big.png"),member_omniauth_authorize_path(:github)
