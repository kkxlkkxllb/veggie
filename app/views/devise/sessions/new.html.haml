#login_contain.clearfix
	#login_form.pull-left
		.title
			学长登录
		= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
			%div
				= f.label :email,"帐号"
				= f.email_field :email
			%div
				= f.label :password,"密码"
				= f.password_field :password

			- if devise_mapping.rememberable?
				= f.check_box :remember_me
				= f.label :remember_me 

			%div
				= f.submit "登录",:class => "btn"
		- unless Member.any?
			= render :partial => "devise/shared/links"

	#register_form.pull-left
		.title
			学员登录／新生10秒注册入学
		.register
			= link_to image_tag("icon/twitter_big.png"),member_omniauth_authorize_path(:twitter)
			= link_to image_tag("icon/weibo_big.png"),member_omniauth_authorize_path(:weibo)
