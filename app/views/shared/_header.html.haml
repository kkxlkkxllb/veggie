.navbar.navbar-fixed-top
	.navbar-inner
		.container-fluid
			%span.brand
				17UP
				= @subtitle
				- if @leafs and params[:pid]
					%span.tag
						&raquo;
						= Provider.find(params[:pid]).user_name
			.container.nav-collapse
				%ul.nav
					%li{:class => ("active" if @leafs)}
						= link_to leafs_path do
							%i.icon-leaf
							文萃
							%span.badge.badge-info
								= Leaf.count
					%li{:class => ("active" if @words)}
						= link_to words_path do
							%i.icon-book
							词汇
							%span.badge.badge-info
								= Word.all.count
					%li{:class => ("active" if @users)}
						= link_to hot_path do
							%i.icon-user
							名人
							%span.badge.badge-info
								= Provider.count
				- if current_member
					%ul.nav.pull-right
						%li
							%span.avatar
								= image_tag(current_member.avatar)
						%li
							%a(href = "/members/sign_out" data-method="delete" rel="nofollow")
								%span.label.label-important
									%i.icon-off
									登出
		